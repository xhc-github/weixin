.slides {
    height: 380rpx;
}

.slides navigator,
.slides image {
    width: 100%;
    height: 100%;
}

.grids {
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    border-left: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
}

.grids .item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 33.3333%;
    height: 33.3333%;
    border-right: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    box-sizing: border-box;
    padding: 20rpx;
}

.grids .item image {
    width: 70rpx;
    height: 70rpx;
}

.grids .item text {
    font-size: 28rpx;
    margin-top: 10rpx;
}

.links {
    display: flex;
}

.links image {
    width: 50%;
    height: 245rpx;
}